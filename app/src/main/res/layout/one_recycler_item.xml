<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="5dp"
    >
    <View
        android:id="@+id/priority_history"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:background="@drawable/green_circular_shape"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:id="@+id/desc_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="30"
            android:textSize="17sp"
            android:ellipsize="end"
            android:textStyle="bold"
            android:text="description"/>
        <TextView
            android:id="@+id/amount_history"
            android:layout_below="@+id/desc_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="200"/>
        <TextView
            android:id="@+id/date_history"
            android:layout_below="@+id/amount_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="25-5-2022"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>